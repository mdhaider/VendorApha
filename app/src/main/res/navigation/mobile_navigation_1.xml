<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.instafinancials.vendoralpha.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />
    <action
        android:id="@+id/action_home_to_profile_home"
        app:destination="@+id/nav_profile_home"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="false" />
    <action
        android:id="@+id/action_home_to_scan"
        app:destination="@+id/nav_cam"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="false" />

    <activity
        android:id="@+id/nav_login"
        android:name="com.instafinancials.vendoralpha.ui.login.LoginActivity"
        android:label="@string/menu_login"
        tools:layout="@layout/activity_login" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.instafinancials.vendoralpha.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.instafinancials.vendoralpha.ui.searchhistory.SearchHistoryFragment"
        android:label="@string/menu_history"
        tools:layout="@layout/fragment_search_history" />

    <fragment
        android:id="@+id/nav_bookmark"
        android:name="com.instafinancials.vendoralpha.ui.bookmark.BookmarkFragment"
        android:label="@string/menu_bookmark"
        tools:layout="@layout/fragment_bookmark" />

    <fragment
        android:id="@+id/nav_orders"
        android:name="com.instafinancials.vendoralpha.ui.orders.OrderFragment"
        android:label="@string/menu_orders"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/nav_refer"
        android:name="com.instafinancials.vendoralpha.ui.send.SendFragment"
        android:label="@string/menu_refer"
        tools:layout="@layout/fragment_send" />
    <fragment
        android:id="@+id/nav_support"
        android:name="com.instafinancials.vendoralpha.ui.support.SupportFragment"
        android:label="@string/menu_support"
        tools:layout="@layout/fragment_support" />

    <fragment
        android:id="@+id/nav_feedback"
        android:name="com.instafinancials.vendoralpha.ui.send.SendFragment"
        android:label="@string/menu_feedback"
        tools:layout="@layout/fragment_send" />
    <fragment
        android:id="@+id/nav_freecredits"
        android:name="com.instafinancials.vendoralpha.ui.share.ShareFragment"
        android:label="@string/menu_free"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/nav_tou"
        android:name="com.instafinancials.vendoralpha.ui.tou.TermsOfUseFragment"
        android:label="@string/menu_tou"
        tools:layout="@layout/fragment_terms_of_use" />

    <fragment
        android:id="@+id/nav_profile_home"
        android:name="com.instafinancials.vendoralpha.ui.profile.ProfileHomeFragment"
        tools:layout="@layout/profile_home_fragment" />

    <activity
        android:id="@+id/nav_cam"
        android:name="com.instafinancials.vendoralpha.ui.CameraActivity"
        tools:layout="@layout/activity_camera" />


</navigation>